<% if !@player_subgroup %>
  <h1><%= @title %></h1>
<% end %>
<% if @persons && @persons.any? %>
  <table class="tournament_table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
  	<% @persons.each do |p| %>
      <tr>
        <td><%= p.first_name %></td>
        <td><%= p.last_name %></td>
        <td><%= p.email %></td>
        <td><%= link_to 'Show Profile', user_path(p), :class=>"button_small button_tour" %></td>
        <% if @is_player_group && @is_organizer%>
          <td><%= link_to 'Remove user from group', member_out_of_group_tournament_path(member: p), method: :post, class: "button_small button_tour"%></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% elsif @persons %>
  No members
<% end %>
