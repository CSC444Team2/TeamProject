<% if !@player_subgroup %>
  <h2><%= @title %></h2>
<% end %>
<% if @persons && @persons.any? %>
  <table class="table main-table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  	<% @persons.each do |p| %>
      <tr>
        <td><%= p.first_name %></td>
        <td><%= p.last_name %></td>
        <td><%= p.email %></td>
        <td><%= link_to 'Show Profile', user_path(p), :class=>"button_new button btn-small" %></td>
        <% if @is_player_group && @is_organizer%>
          <td><%= link_to 'Remove user from group', member_out_of_group_tournament_path(member: p), method: :post, class: "button_new_stop button btn-small"%></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% elsif @persons %>
  <% if @is_player_group %>
    No members
  <% else %>
    None
  <% end %>
<% end %>
