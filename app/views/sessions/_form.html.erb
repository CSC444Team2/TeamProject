<div class="col-sm-6 col-sm-offset-3">
  <%= form_for(:session, url: login_path) do |f| %>

    <% if flash[:danger] %>
        <div class="notice"><%= flash.now[:danger] %></div>
      <% end %>

    <h1>Please Login</h1>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <%= f.email_field :email, :placeholder => "Email", :class => "form-control" %>
      </div>
    </div>

    <div class="form-group sm-mar-bot">
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
      </div>
    </div>

     <%= link_to "Forgotten password?", new_password_reset_path, :class => "forgotten-link" %>

     <div>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me %>
     </div>

     <%= f.submit "Log in", :class => "button_new button" %>
     <p id="login_message">New user? <%= link_to "Sign up!", signup_path, :class => "sign_up" %></p>
  <% end %>
</div>
