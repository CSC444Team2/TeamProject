<div class="col-sm-6 col-sm-offset-3">
  <%= form_for @user, :html => { :multipart => true } do |f| %>

      <h1>Sign Up</h1>

      <div class="form-group row">
        <%= f.label :first_name, :class=>"col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.text_field :first_name, :placeholder => "First Name", :class =>"form-control",:required => true%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :last_name, :class=>"col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.text_field :last_name, :placeholder => "Last Name", :class =>"form-control", :required => true%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :profile_picture, :class=>"col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.file_field :profile_picture, :class => "form-control-file" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :gender, :class=>"col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.text_field :gender, :placeholder => "Male/Female/Prefer not to say", :class => "form-control", :required => false%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :date_of_birth, :class=>"col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.date_select :date_of_birth, start_year: 1900, :required => true, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, :class=>"col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.email_field :email, :placeholder => "Email", :class =>"form-control", :required => true%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :phone_number, :class=>"col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.telephone_field :phone_number, :placeholder => "Phone Number", :class =>"form-control", :required => true%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :address, :class=>"col-xs-3 col-form-label" %>
        <div class="col-xs-9">
         <%= f.text_field :address, :placeholder => "Address", :class =>"form-control", :required => true%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, :class=>"col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.password_field :password, :placeholder => "at least 6 characters", :class =>"form-control", :required => true, :minlength => 6 %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :confirm_password, :class=>"col-xs-3 col-form-label" %>
        <div class="col-xs-9">
          <%= f.password_field :password_confirmation,:class =>"form-control", :required => true%>
        </div>
      </div>

    <%= f.submit "Submit", :class => "button button_new"%>

    <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li id="errors"><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

<% end %> <!-- End of form-->
</div>
