<html>
<head>
	<link rel="stylesheet" type="text/css" href="css/style.css" />
</head>

<body>
    <div id="main">
    <div id="menubar">
       <div id="welcome">
          <h1><%= link_to "Welcome", "/home/index" %></h1>
        </div><!--close welcome-->

        <div id="menu_items">
          <ul id="menu">
            <li><%= link_to "Home", "/home/index" %></li>
            <li><a href="/tournaments">Tournaments</a></li>
            <li><a href="features.html">Features</a></li>
            <li><a href="faq.html">FAQ</a></li>
            <li><a href="ourStory.html">Our Story</a></li>
            <li><a href="termsOfService.html">Terms of Service</a></li>
            </ul>
          </div><!--close menu-->
      </div><!--close menubar-->

      <div id="site_content">
        <div id="request_div">
          <h1 id="reqeustHeader">New Request to Organize Tournament</h1>
          <%= form_for(@request) do |f| %>  
              <p id="create_request">
                <%= f.label :tournament %><br>
                <%= f.collection_select :receiver_id, Tournament.all, :id, :name, include_blank: false %>
                <!--http://stackoverflow.com/questions/8907867/can-someone-explain-collection-select-to-me-in-clear-simple-terms-->
              </p>
              <p id="create_request">
                <%= f.label :message %><br> 
                <%= f.text_field :message, :placeholder => "Describe your intention", :class => "form_input" %>
              </p>
                 
              <%= f.submit "Send Request", :class => "login_button" %>
          <% end %>
        </div>
      </div>
    </div>
</body>
</html>
