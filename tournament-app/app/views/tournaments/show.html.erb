<body>
    <b>Tournament name: </b><%= @tournament.name %> <br />
    <b>Tournament id: </b> <%= @tournament.id %> <br />

	<% if current_user.nil? || !current_user.played_in?(@tournament) %>
      <%= button_to "PLAY!", :controller => "play", :action => "create", :method=> :post, :params=> {event_id: @tournament.id} %>
    <% else %>
      <td><%= link_to "Stop playing...", play_path(@tournament.id), :method=> :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <% if current_user.nil? || !current_user.organized_a?(@tournament) %>
      <%= button_to "Organize!", :controller => "organize", :action => "create", :method=> :post, :params=> {event_id: @tournament.id} %>
    <% else %>
      <td><%= link_to "Stop organizing...", organize_path(@tournament.id), :method=> :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <% if current_user.nil? || !current_user.sponsored_a?(@tournament) %>
      <%= button_to "Sponsor!", :controller => "sponsor", :action => "create", :method=> :post, :params=> {event_id: @tournament.id} %>
    <% else %>
      <td><%= link_to "Stop sponsoring...", sponsor_path(@tournament.id), :method=> :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

	<%= render partial: "show_persons_for_one_event", :locals => { :@title => "Players", :@persons => @tournament.players } %>
	<%= render partial: "show_persons_for_one_event", :locals => { :@title => "Organizers", :@persons => @tournament.organizers } %>
	<%= render partial: "show_persons_for_one_event", :locals => { :@title => "Sponsors", :@persons => @tournament.sponsors } %>
	
	<br/>
    <%= link_to "All tournaments", "/tournaments" %>
</body>
