<% if !@is_player_group %>
  <h1><%= @title %></h1>
<% else %>
  <i><%= @title %></i>
<% end %>
<% if @persons && @persons.any? %>
  <table class="tournament_table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
  	<% @persons.each do |p| %>
      <tr>
        <td><%= p.first_name %></td>
        <td><%= p.last_name %></td>
        <td><%= link_to 'Show Profile', user_path(p), :class=>"button_small button_tour" %></td>
        <% if @is_player_group && @is_organizer%>
          <td><%= link_to 'Remove user from group', "home", :class=>"button_small button_tour"%></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% elsif @persons %>
  None
<% end %>
