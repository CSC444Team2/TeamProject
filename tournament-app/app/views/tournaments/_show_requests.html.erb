<% if requests.any? %>
************************************************<br />
    <h1> <%= title %> </h1>
    <table>
    <% requests.each do |r| %>
    	<% request_sender=User.find(r.sender_id) %>
		<tr>
			<td>
			<% request_sender=User.find(r.sender_id) %>
			<% request_tournament = Tournament.find(r.receiver_id) %>
			
			<%= link_to request_sender.first_name, user_path(request_sender) %> 
			<%= link_to request_sender.last_name, user_path(request_sender) %> 
			(<%= link_to request_sender.email, user_path(request_sender) %>) 
			wants to organize 
			<%= link_to request_tournament.name, tournament_path(request_tournament) %>:
			<i><%= r.message %></i>
			</td>
			<% if current_user.organized_a?(request_tournament) %>
				<td><%= link_to 'Approve', request_path(r, request_id: r.id, approve: true), method: :delete, data: { confirm: 'Confirm that you approve?' }, :class=>"button_small button_tour"  %></td>
				<td><%= link_to 'Reject', request_path(r, request_id: r.id, approve: false), method: :delete, data: { confirm: 'Confirm that you reject?' }, :class=>"button_small button_tour"  %></td>
			<% end %>
      	</tr>
    <% end %>
    </table>
<% end %>
